# Production Environment Configuration for VPS Deployment
# Uses different ports to avoid conflicts with existing services

# Application Settings
RUST_LOG=info
APP_HOST=0.0.0.0
APP_PORT=3001

# Database Configuration (avoiding port 5432 conflict)
DB_HOST=postgres
DB_PORT=5433
DB_NAME=axum_auth
DB_USER=postgres
DB_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgres://postgres:your_secure_postgres_password_here@postgres:5432/axum_auth

# Redis Configuration (avoiding port 6379 conflict)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379

# JWT Settings
JWT_SECRET=your_super_secure_jwt_key_for_production_change_this_to_long_random_string
JWT_EXPIRES_IN=24h

# Email Configuration
SMTP_HOST=mail.bowofade.com
SMTP_PORT=587
SMTP_USERNAME=noreply@bowofade.com
SMTP_PASSWORD=Noreply@Pass@1996
FROM_EMAIL=noreply@bowofade.com
FROM_NAME=Axum Auth System
FRONTEND_LOGIN_URL=https://yourdomain.com/login

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60

# Production specific settings
WORKERS=4
MAX_CONNECTIONS=100
